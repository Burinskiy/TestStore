@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RetailQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RetailPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PromoQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PromoPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PromoText)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RetailQuantity)
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RetailPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PromoQuantity)
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PromoPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PromoText)
        </td>
        <td>
            @if (User.IsInRole("StoreOwner"))
            {
                Html.ActionLink("Edit", "Edit", new { id = item.Id });
                Html.ActionLink("Delete", "Delete", new { id = item.Id });
            }
            @Html.ActionLink("Buy", "Buy", "Cart", new { id = item.Id }, null)
            @Html.ActionLink("Details", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
